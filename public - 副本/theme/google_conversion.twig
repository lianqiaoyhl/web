{% if google_etc %}
    {% if google_etc.google_conversion_id %}
        <!-- Google Code for order Conversion Page -->
        <script type="text/javascript">
        /* <![CDATA[ */
        var google_conversion_id = {{ google_etc.google_conversion_id }};
        var google_conversion_language = "en";
        var google_conversion_format = "3";
        var google_conversion_color = "ffffff";
        var google_conversion_label = "{{ google_etc.google_conversion_label }}";
        var google_conversion_value = {{ google_etc.google_conversion_value }};
        var google_conversion_currency = "USD";
        var google_remarketing_only = false;
        /* ]]> */
        </script>
        <script type="text/javascript" src="//www.googleadservices.com/pagead/conversion.js">
        </script>
        <noscript>
            <div style="display:inline;">
                <img height="1" width="1" style="border-style:none;" alt="" src="//www.googleadservices.com/pagead/conversion/{{ google_etc.google_conversion_id }}/?value={{ google_etc.google_conversion_value }}&amp;currency_code=USD&amp;label={{google_etc.google_conversion_label}}&amp;guid=ON&amp;script=0"/>
            </div>
        </noscript>
    {% endif %}
{% endif %}
