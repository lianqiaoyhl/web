{% if css == '' %}
	{% set css = 'a' %}
{% endif %}
<section class="collection class-{{css}}">
	{% if title_show  == 1 %}
	<div class="collection_title">{{ title }}</div>
	<!-- <div class="collection_dec">{{ introduce }}</div> -->
	{% endif %}
	<div class="collection_content">
		{% if list %}
			{% for item in list %}
			    <div class="col-sm-6 col-md-6 col-xs-6 col-lg-6 items">
			        <a href="{{ item.url }}">
			            <div class="thumbnail">
			                <div class="tagWraper">
			                    <div class="lazyload">
			                    	{% if item.thumb == '' %}
			                    		{% set thumb = 'public/image/product-preview.png' %}
			                    	{% else %}
			                    		{% set thumb = item.thumb %}
			                    	{% endif %}
			                        <img src="{{ thumb  }}" alt="{{ item.title }}" class="caption">
			                    </div>
			                    <div class="desc">{{ item.description }}</div>
			                </div>
			                <div class="caption">
			                    <div class="tips"><span>限时特惠</span></div>
			                    <h4 class="title">{{ item.title }}</h4>
			                    {% if item.currency_prefix == 1 %}
			                    	<p>{{ item.currency_code }}{{ item.price }}</p>
			                    {% else %}
			                    	<p>{{ item.price }}{{ item.currency_code }}</p>
			                    {% endif %}
			                </div>
			            </div>
			        </a>
			    </div>
		    {% endfor %}
	    {% endif %}
	</div>
</section>
