{% if status == 1 %}
<div class="topbar" style="background-color: {{ backgroundColor }}; margin: {{ margin.top }}px {{ margin.right }}px {{ margin.bottom }}px {{ margin.left }}px; padding: {{ padding.top }}px {{ padding.right }}px {{ padding.bottom }}px {{ padding.left }}px;">
	{% if href != '' %}
		<a href="{{ href }}"><p style="color: {{ color }};">{{ text }}</p></a>
	{% else %}
		<a href="{{ href }}"><p style="color: {{ color }};">{{ text }}</p></a>
	{% endif %}
</div>
{% endif %}
