<script type="text/javascript" src="public/javascript/jquery-2.2.3.min.js"></script>
<link href="public/plugins/swiper/swiper-3.4.0.min.css" rel="stylesheet" type="text/css" >
<script src="public/plugins/swiper/swiper-3.4.0.js"></script>
{% if css == '' %}
	{% set css = 'a' %}
{% endif %}
<section class="banner class-{{css}}">
	<div class="swiper-container">
		<div class="swiper-wrapper">
			{% if images %}
				{% for image in images %}
					<div class="swiper-slide">
						{% if image.href %}
							<a href="{{ image.href }}"><img src="{{ image.url }}" width="100%"></a>
						{% else %}
							<img src="{{ image.url }}" width="100%">
						{% endif %}
					</div>
				{% endfor %}
			{% endif %}
		</div>
	</div>
	<div class="swiper-pagination"></div>
</section>
<script type="text/javascript">
	$(function(){
		var mySwiper1 = new Swiper('.swiper-container', {
	        autoplay: 3000,
	        loop: true,
	        autoHeight:true,
	        pagination: '.swiper-pagination',
        	// paginationType: 'fraction'
        	paginationType: 'custom',
	        paginationCustomRender: function(swiper, current, total) {
	            var text = "";
	            for (var i = 1; i <= total; i++) {
	                if (current == i) {
	                    text += "<span class='carousel-indicators on'></span>";
	                } else {
	                    text += "<span class='carousel-indicators'></span>";
	                }
	            }
	            return text;
	        }
	    });
	})
</script>
