{% extends 'base.twig' %}

{% block content %}
{% include '/public/theme/google_remarketing_cat.twig' %}
{% include 'navigation.twig' %}
<div class="navtypeview">
    <div id="category">
        <div><a class="vertical-view check" href="/">{{ lang.all_product }}</a></div>
        {% for c in category_title %}
        <div>
            <a class="vertical-view" href="./?category_id={{ c.id }}&show=1">{{ c.title }}</a>
        </div>
        {% endfor %}
    </div>
</div>
<input type="hidden" value="{{category_id}}" id="cat_id">
<!--内容产品-->
    <div id="content" style="display: none;padding-top:20px;">
        <div class="cat_title"><span class="line"></span><span class="cat_name">{{title}}</span><span class="line"></span></div>
        <div class="row wcolor">
            
        </div>
        <div class="next_page" data-error='{{ lang.no_more }}' data-now='1'><button class="unable">{{ lang.prev_page }}</button><button>{{ lang.next_page }}</button></div>
    </div>
    <div id="module_dome" style="display: none;">
        <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3 items">
            <a href="{url}">
                <div class="thumbnail">
                    <div class="tagWraper">
                        <div class="imgthumb lazyload empty">
                            <img src="{thumb}" alt="{title}">
                        </div>
                        <div class="tips"><span>SALE</span></div>
                    </div>
                    <div class="caption">
                        <p>{shop_price}</p>
                        <h4 class="title">{title}</h4>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div id="emptydiv" style="display: none;">
        <div class="emptydiv"><div class="emptyicon list-care"></div><p class="p1">{{lang.empty_category}}</p></div>
    </div>
<script src="{{ THEME }}/script/cat.js"></script>
{{ footer|raw }}
{% endblock %}
{% block footer_js %}
{% endblock %}

