{% extends 'base.twig' %}

{% block content %}
{% include '/public/theme/google_remarketing_index.twig' %}
    <!--菜单-->
    <div class="ui-offcanvas">
        <div class="boxer">
            <!-- <h1>{{ lang.offcanvas_title }}</h1> -->
            <ul class="ui-list menu">
                <li><a href="/" class="ui-arrowlink">{{lang.home_page}}</a></li>
                {% for c in category_title %}
                <li><a href="./?category_id={{ c.id }}" class="ui-arrowlink">{{ c.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!--用ajax获取，URL地址 /ajaxGoods/{id} 这个id为后台配置的各个模块id 不传id默认为配置后台首页-->
    <input type="hidden" value="{{id}}" id="cat_id">
    <section id="main">
        <header class="ui-header ui-header-stable ui-border-b">
            <i class="ui-icon-scan1"><img src="{{ THEME }}/image/maue.png" height="20px" style="margin-top: 12px;position: absolute" alt=""></i>
            {% if info.logo %}
                <img src="{{ info.logo }}">
            {% else %}
                <h1>{{ info.title }}</h1>
            {% endif %}
        </header>
        <section class="ui-container page-index">
            <!--焦点图-->
            {{ index_focus|raw }}
            <!--首页推送产品-->
            <div class="ui-panel text-center" data-mid=""> 
                <div class="common-hd ui-border-b" style="display:none;"> <span class=""></span> </div> <div class="ui-row products"></div>
            </div>
            <div class="preload" data-error='{{ lang.no_more }}' style="text-align:center;display:none;font-size:12px;color:#666">{{ lang.load }}...</div>
        </section>
         {{ footer|raw }}
    </section>
    <div id="goods-demo" style="display:none;">
        <div class="ui-col ui-col-50">
            <a href="{type}">
                <div class="product-grid">
                    <div class="product-thumb">
                        <img src="{thumb}">
                    </div>
                    <div class="product-title">{title}</div>
                    <div class="product-price red">{price}</div>
                    <div class="market_price">{market_price}</div>
                </div>
            </a>
        </div>
    </div> 
{% endblock %}
{% block footer_js %}
    <script src="{{ THEME }}/script/index.js"></script>
{% endblock %}

