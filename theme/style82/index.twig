{% include '/public/theme/header.twig' %}
<!-- resource -->
<link href="{{ THEME }}/style/index.css" rel="stylesheet">
<link href="/public/plugins/swiper/swiper-3.4.0.min.css" rel="stylesheet">
<!-- end header resource -->
<section id="page-index">
    <input id="region_code" value="{{ regions.code }}" type="hidden">
{% if has_home %}
<header>
    <a href="/" class="goback"><img src="{{ THEME }}/images/detail-back.png" alt="">{{ lang.go_home }}</a>
</header>
{% endif %}
<div class="swiper-container gallery-top">
    <div class="swiper-wrapper">
        {% if photos %}
			{% for p in photos %}
                 <div class="swiper-slide">
                    <img src="{{ p.thumb }}">
                 </div>
            {% endfor %}
        {% else %}
            <div class="swiper-slide">
                <img src="{{ thumb }}">
            </div>
        {% endif %}
    </div>
</div>
<div class="swiper-container gallery-thumbs">
    <div class="swiper-wrapper" style="">
    {% if photos %}
        {% for p in photos %}
            <div class="swiper-slide" style="background-image:url({{ p.thumb }})">
            </div>
        {% endfor %}
    {% else %}
        <div class="swiper-slide" style="background-image:url({{ thumb }})">
        </div>
    {% endif %}
    </div>
</div>
<div class="off">
    {%if market_price != 0 and price != 0%}{{ ((market_price-price)/market_price*100)|number_format(0) }}% OFF{%endif%}
</div>

<div class="traits">
    <del>
        {{ new_price_format.symbol_left }}
        {{ new_price_format.market_price_format }}
        {{ new_price_format.symbol_right }}
    </del>
    <h3 class="sale_price">
        {{ new_price_format.symbol_left }}
        {{ new_price_format.price_format }}
        {{ new_price_format.symbol_right }}
    </h3>
    <div class="sales">{{ lang.comment }}<span>{{ sales }}</span></div>
    <div class="last_num"><i class="icon left"></i>{{ lang.last }}{{ stock }}{{ lang.lastL }}</div>
</div>
<div class="tags">
    <div class="title">{{ title }}</div>
    <div class="tips"><i class="icon free"></i>{{ lang.free_yun }}</div>
    <div class="tips"><i class="icon cash"></i>{{ lang.cash_on_delivery }}</div>
</div>
{% if comment %}
<div class="comment" id="comment">
    <div class="navcom">
        <!--div class="closeBtn"></div-->
        <a href="javascript:void(0)" id="list" class="allcom">{{ lang.seeall }}</a>
    </div>
    <div class="picMarquee-top">
        <div class="commentmain" data-fn="commentScroll" id="mq">
            <div class="picList" id="mq1">
                {% for a in comment %}
                    <div class="item">
                    <li data-groud="{{ a.comment_id }}" rel="{{ a.star }}" class="user-item">
                        <div class="user_info">
                            {% if a.is_anonymous==1 %}
                                <div class="user_name">{{ lang.anonymous }}</div>
                            {% else %}
                                <div class="user_name">{{ a.name }}</div>
                            {% endif %}
                            <span class="stars iconStar">
                                <span class="rate{{a.star}}"></span>
                            </span>
                        </div>
                        <div class="user-text">{{ a.content }}</div>
                        <div class="msKeimgBox">
                            <ul>
                                {% for b in a.thumb %}
                                {% if loop.index == 1%}
                                    <li dataimg="{{ b.thumb }}">
                                        <img src="{{ b.thumb }}"/>
                                    </li>
                                {% else %}
                                    <li style="display: none;" dataimg="{{ b.thumb }}"></li>
                                {% endif%}
                                {% endfor %}
                            </ul>
                            <div class="mskeTogBtn" style="display:none;"></div>
                        </div>
                    </li>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<div class="layer_co"></div>
<div class="com_box">
    <div class="big_com">
        <div class="close-btn">Ã—</div>
        <div class="layer-main">
            <div class="swiper-container" id="com-swiper">
                <div class="swiper-wrapper"></div>
                <div class="swiper-button-prev swiper-button-black"></div>
                <div class="swiper-button-next swiper-button-black"></div>
            </div>
        </div>
    </div>
</div>
{% endif %}
