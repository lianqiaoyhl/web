                        require(['jquery'], function($){
                            $('[data-yahoo-js]').click(function(){
                                try {
                                    {{ yahoo_js_trigger|raw }}
                                    console.log('click done');
                                    console.log(window.dotq);
                                }
                                catch(e){
                                    console.error('yahoo js code not working');
                                    console.log(yahooJs);
                                }
                            });
                        });
                    </script>
                {% endif %}
            </div>
        </div>
    </footer>
