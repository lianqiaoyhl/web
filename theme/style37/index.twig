        <div class="swiper-container">
            <div class="swiper-wrapper">
                {% if video.video_url %}
                <div class="swiper-slide">
                    <video width="100%" poster="{{ video.cover_url }}" id="video" preload="false" src="{{ video.video_url }}" controls="controls"
                        x5-playsinline="" playsinline="" webkit-playsinline="">
                </div>
                {% endif %} {% if photos %} {% for p in photos %}
                <div class="swiper-slide">
                    <img src="{{ p.thumb }}" width="100%">
                </div>
                {% endfor %}
                {% endif %}
                 {% if video.video_url is empty and photos is empty %}
                <div class="swiper-slide">
                    <img src="{{ thumb }}" width="100%">
                </div>
                {% endif %}
            </div>
            <div class="swiper-pagination">
                 {% for p in photos %}
                <span class="on"></span>
                {% endfor %} {% if video.video_url %}
                <span class="on"></span>
                {% endif %}
            </div>
        </div>
    <div class="main">
        <div class="purchase-tip">
            <div class="title">
                {{ title }}
            </div>
            <div class="tip-price">
                <span>{% if currency_prefix == 1 %}{{ currency_code }}{{price}}{% else %}{{price}}{{ currency_code }}{% endif %}</span>
                <del>原價{% if currency_prefix == 1 %}{{ currency_code }}{{market_price}}{% else %}{{market_price}}{{ currency_code }}{% endif %}</del>
            </div>
            <div class="time">
                <span class="timelimit">{{ lang.time_limit }}</span>
