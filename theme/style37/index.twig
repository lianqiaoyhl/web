<div id="attr" style="display:none;" data-error='{{ lang.Th_titleattr }}'>
    <input type="hidden" name="product_id" value="{{ product_id }}">
    <div class="header">
        <a class="back"><img src="{{ THEME }}/images/returnback.png" ></a>
        <div>{{ lang.choose }}</div>
    </div>
    <div class="product">
        <div>{{ lang.select_set}}</div>
        {% if combo %}
            {% for c in combo %}
            <div class="comob {% if loop.index == 1%}action{% endif %}" rel="{{ c.combo_id }}" single_c="{{c.is_single_combo}}">
                <i></i>
                <span>{{ c.title }}</span><span>{% if currency_prefix == 1 %}{{ currency_code }}{{c.price}}{% else %}{{c.price}}{{ currency_code }}{% endif %}</span>
            </div>
            {% endfor %}
        {% else %}
        <div class="comob action" rel="0" single_c="0">
            <i></i>
            <span>{{ title }}</span><span>{% if currency_prefix == 1 %}{{ currency_code }}{{price}}{% else %}{{price}}{{ currency_code }}{% endif %}</span>
        </div>
        {% endif %}
    </div>
    <div class="proattr">
        {% if combo %}
            {% for c in combo %}
            <div class="coco combo_{{ c.combo_id }}" {% if loop.index != 1%}style="display:none;"{% endif %}>
                {% for o in  c.goods %}
                    <div class="goods">
                        <h3>{{ o.title }}</h3>
                        {% for a in o.options %}
                        <div class="size">
                            <label>{{ a.attr_group_title }}</label>
                            <ul>
                                {% for key,attr in a.attr %}
                                <li class="goodli {% if loop.length == 1%}key{% endif %}" data-combo="{{ c.combo_id }}" data-number="{{ o.combo_goods_id }}-{{ a.attr_group_id }}-{{ attr.product_attr_id }}">{{ attr.name|raw }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
            {% endfor %}
            <input type="hidden" name="comob" value="">
        {% else %}
        <div class="goods attr_0 combo_0">
            {% for o in options %}
            <div class="size">
                <label>{{ o.attr_group_title }}</label>
                <ul>
                    {% for key,attr in o.attr %}
                    <li class="goodli {% if loop.length == 1%}key{% endif %}" data-combo="0" data-number="{{ o.attr_group_id }}-{{ attr.product_attr_id }}">{{ attr.name|raw }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}
            <input type="hidden" name="comob" value="0">
        </div>
        {% endif %}
    </div>
    <div class="qty">
        <label>{{ lang.num }}</label>
        <div class="qtybtn">
            <div class="less" onclick="minnumber()"><img src="{{ THEME }}/images/less.png" alt="-"></div>
            <div class="input"><input onchange="inputnumber()" type="number" name="num" id="num" value="1"></div>
            <div class="more" onclick="addnumber()"><img src="{{ THEME }}/images/more.png" alt="+"></div>
        </div>
    </div>
    <div id="confirm" class="btnconfirm" data-cuckootag="confirm_arrtibute" data-event="getattr">{{ lang.confirm }}</div>
</div>

