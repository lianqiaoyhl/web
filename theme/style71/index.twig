{% include '/public/theme/header.twig' %}
<!-- resource -->
<link href="{{ THEME }}/style/index.min.css" rel="stylesheet">
<link href="{{ THEME }}/style/swiper-3.4.0.min.css" rel="stylesheet" type="text/css" >
<style type="text/css">
    .count_atrr .tab span{
        padding: 5px 7px;
    }
</style>
<!-- end header resource -->
<input id="region_code" value="{{ regions.code }}" type="hidden">
<input id="identity_tag" value="{{ identity_tag }}" type="hidden">
<!--  -->
<div class="swiper-container">
	<div class="swiper-wrapper">
		{% if photos %}
			{% for p in photos %}
				<div class="swiper-slide">
					<img src="{{ p.thumb }}" width="100%">
				</div>
			{% endfor %}
		{% else %}
			<div class="swiper-slide">
				<img src="{{ thumb }}" width="100%">
			</div>
		{% endif %}
	</div>
	<div class="swiper-pagination"></div>
	<div class="swiper-button-prev"></div>
	<div class="swiper-button-next"></div>
</div>
<div class="browse">
	<span>{{ sales }}</span>{{ lang.look }}
</div>
<div>
	<h1>{{ title }}</h1>
	<div class="stars"></div>
</div>
<div class="sales">
	<del>
		{% if currency_prefix == 1 %}{{ currency_code }}{{ market_price }}{% endif %}
		{% if currency_prefix == 0 %}{{ market_price }}{{ currency_code }}{% endif %}
	</del>
	<div class="sales_wrap">
		<div class="price">
			{% if currency_prefix == 1 %}{{ currency_code }}<span>{{ price }}</span>{% endif %}
			{% if currency_prefix == 0 %}<span>{{ price }}</span>{{ currency_code }}{% endif %}
		</div>
		<div class="percent">
			-{{ ((market_price-price)/market_price*100)|number_format(0) }}% 
		</div>
		<div class="timeWrap">
			<span id="timer">
                <span  id="h">10</span>
            	<span class="">h:</span>
                <span id="m">00</span>
                <span class="">m:</span>
                <span id="s">00</span>
                <span class="">s</span>
          	</span>
		</div>
	</div>
</div>
<div class="buy">
	<a href="#ui-paramselect" data-cuckootag="buy_now">{{ lang.buy_now }}</a>
</div>
<div class="product_info">
	<div class="img_tt">{{ lang.pro_description }}</div>
	<div class="m-img" id="m-img">
        {{ content|replace({'<img src=': '<img class="lazyload" src="public/image/product-preview.png" data-img='})|raw }}
    </div>
</div>
<div id="page-attr" data-error="{{ lang.Th_titleattr }}">
	{% include 'cmpt-guige.twig' %}
</div>
<div class="buy_now" data-cuckootag="confirm_arrtibute">
    <button>{{ lang.confirm }}</button>
</div>
<div class="query" data-cuckootag="check_order" data-value="{{ identity_tag }}">
	{{ lang.order_inquiry }}
</div>
	
	{% if comment %}
	<div class="scroll_tt" id="pinlun_tt">{{ lang.pingjia }}</div>
    <div id="pinlun_content">
        <div class="picMarquee-top">
            <div class="bd" data-fn="userScroll" style="height:250px; overflow: hidden;font-size:14px;">
            	<div class="picList">
                {% for a in  comment %}
		            <div class="lab" data-group="{{ a.comment_id }}" data-id="0" style="color:#a8aeb7;padding-bottom:10px;">
		                <div style="border-bottom: 1px dotted #ddd;padding: 5px;">
		                    <span class="inm">
		                    <span id="wi">{{ a.name }}</span>
		                        {% if a.is_anonymous %}
		                            <span id="nm" class="nm">{{ lang.anonymous }}</span>
		                        {% endif %}
		                </span>&nbsp;
		                    <span>
		                    {{ lang.score }}：<span style="color: red;">{{ a.star }}</span>
		                </span>
		                </div>
		                <P style="color: #666;padding: 5px;">{{ a.content }}</P>
		                <div class="msKeimgBox">
		                    <ul>
		                        <li>
		                            {% for b in a.thumb %}
		                                <img src="{{ b.thumb }}" style="width: 75px !important;vertical-align:bottom;margin-right:5px;" />
		                            {% endfor %}                                        
		                        </li>
		                    </ul>
		                </div>
		            </div>
		        {% endfor %}
		        </div>
            </div>
        </div>
    </div>
    {% endif %}
    <div class="scroll_tt">{{ lang.new_order }}</div>
    <div class="new_order">
        <div class="picMarquee-top">
            <div class="bd" data-fn="commentScroll" style="height:200px; overflow: hidden;font-size:13px;">
                <ul class="picList">
                    <li>
                        <span>{{ lang.zhang }}**（095***3590）</span>
                        <span style="float:right;">4{{ lang.before }}</span>
                        <br>
                        <span>{{ title }}</span>
                    </li>
                    <li>
                        <span>{{ lang.wang }}**（098***4865）</span>
                        <span style="float:right;">8{{ lang.before }}</span>
                        <br>
                        <span>{{ title }}</span>
                    </li>
                    <li>
                        <span>{{ lang.li }}**（092***3291）</span>
                        <span style="float:right;">2{{ lang.before }}</span>
                        <br>
                        <span>{{ title }}</span>
                    </li>
                    <li>
                        <span>{{ lang.zhao }}**（091***6851）</span>
                        <span style="float:right;">10{{ lang.before }}</span>
                        <br>
                        <span>{{ title }}</span>
                    </li>
                    <li>
                        <span>{{ lang.zheng }}**（092***6851）</span>
                        <span style="float:right;">3{{ lang.before }}</span>
                        <br>
                        <span>{{ title }}</span>
                    </li>
                    <li>
                        <span>{{ lang.liu }}**（093***3943）</span>
                        <span style="float:right;">1{{ lang.before }}</span>
                        <br>
                        <span>{{ title }}</span>
                    </li>
                    <li>
                        <span>{{ lang.li }}**（096***3943）</span>
                        <span style="float:right;">1{{ lang.before }}</span>
                        <br>
                        <span>{{ title }}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>  

<div class="User_notes" style="margin-top: 10px">
    <h2 class="notes">{{ lang.user_notes }}</h2>
    <div class="note_text">{{ lang.user_fb }}</div>
    <div class="note_title">{{ lang.user_note1 }}</div>
    <div class="note_text">{{ lang.user_note_adr }}{{ regions.region_name }}。</div>
    <div class="note_title">{{ lang.user_note2 }}</div>
    <div class="note_text">{{ lang.user_note2_1 }}</div>
    <div class="note_title">{{ lang.user_note3 }}</div>
    <div class="note_text">{{ lang.user_note3_1 }}<a href="mailto:{{ service_email }}" style="text-decoration:none;outline:0;color: #b4282d">{{ service_email }}</a>{{ lang.user_note3_2 }}</div>
    <div class="note_title">{{ lang.user_note4 }}</div>
    <div class="note_text">{{ lang.user_note4_1 }}</div>
    <div class="note_title">{{ lang.user_note4_2 }}</div>
    <div class="note_title">{{ lang.user_note4_3 }}</div>
    <div class="note_text">{{ lang.user_note4_4 }}</div>
</div>
<div class="service">
	<div>{{ lang.cash_on_delivery }}</div>
	<div>{{ lang.returned_goods }}</div>
	<div>{{ lang.free_yun }}</div>
</div>
<div class="fix">
	<div style="display:none;"><a href="http://www.facebook.com" target="_blank"></a></div>
	<div data-cuckootag="service" data-value="{{ service_contact_id }}"></div>
</div>
<!-- footer resource -->
<script src="{{ THEME }}/js/index.js"></script>
<script src="{{ THEME }}/js/guige.js"></script>
